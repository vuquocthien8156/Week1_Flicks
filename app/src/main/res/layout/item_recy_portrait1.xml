<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_height="wrap_content"
             android:layout_width="match_parent"
             xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
        android:id="@+id/layoutRela"
        android:focusable="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="#363636">

    <ImageView
            android:id="@+id/img_port"
            android:layout_width="170dp"
            android:layout_height="220dp"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"/>
    <TextView
            android:id="@+id/txtName_port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_port"
            android:text="AAAAA"
            android:layout_marginLeft="15dp"
            android:textSize="24sp"
            android:textColor="#FFF"/>
    <TextView
            android:id="@+id/txtDecrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_port"
            android:layout_below="@id/txtName_port"
            android:text="fhdjfhdhflskjdhfhjdfshdfljhasdlfjh"
            android:maxLines="5"
            android:ellipsize="end"
            android:layout_marginLeft="15dp"
            android:textColor="#FFF"/>
    <TextView
             android:id="@+id/txtXemthem"
                android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Read more"
              android:textColor="#a7a7a7"
             android:clickable="true"
             android:layout_below="@id/txtDecrip"
              android:layout_gravity="left"
                android:layout_toRightOf="@id/img_port"
             android:layout_marginLeft="15dp"/>

</RelativeLayout>
    <ImageView
            android:id="@+id/imgPlay"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play"
            android:background="@null"
            android:visibility="gone"/>
</FrameLayout>